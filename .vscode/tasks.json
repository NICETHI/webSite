{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Push to Backend",
      "type": "shell",
      "command": "clasp push -f",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Serve frontend",
      "type": "shell",
      "command": "ng serve",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Format files",
      "type": "shell",
      "command": "npm run lint && prettier --write .",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Send Push Notification",
      "type": "shell",
      "command": "npm run start --prod --title=\"${input:messageTitle}\" --body=\"${input:messageBody}\" --url=\"${input:messageURL}\"",
      "options": {
        "cwd": "${workspaceFolder}/messages"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "messagePassword",
      "description": "Message Password:",
      "default": "",
      "type": "promptString"
    },
    {
      "id": "messageTitle",
      "description": "Message Title:",
      "default": "",
      "type": "promptString"
    },
    {
      "id": "messageBody",
      "description": "Message Body:",
      "default": "",
      "type": "promptString"
    },
    {
      "id": "messageURL",
      "description": "URL:",
      "default": "",
      "type": "promptString"
    }
  ]
}
